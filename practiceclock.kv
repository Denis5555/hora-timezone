#:kivy 1.0.9
#:import utils kivy.utils

<Label>
    markup: True

BoxLayout:
    orientation: "vertical"
    size: root.width, root.height

    Label:
        canvas.before:
            Rectangle:
                pos: self.center_x - 125, self.center_y + 0 # default size is 100x100
                source: 'imgbr.png'
                size: 256, 256

        id: timebr
        text: "00:00"
        color: "grey"
        font_size: 100 # para o apk eu usei 100 # para ver no computador 15
        halign: 'center'
        pos_hint:{'left_x': 0.1, 'center_y': 0.1}

    Label:
